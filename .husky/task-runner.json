{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
    {
        "name": "welcome-message-example",
        "command": "bash",
        "args": [ "-c", "echo Husky.Net is awesome!" ],
        "windows": {
            "command": "cmd",
            "args": [ "/c", "echo Husky.Net is awesome!" ]
        }
    },
    {
        "name": "dotnet-format-staged-files",
        "group": "pre-commit-operations",
        "command": "dotnet",
        "args": [ "format", "--include", "${staged}" ],
        "include": [ "**/*.cs" ]
    }
   ]
}
