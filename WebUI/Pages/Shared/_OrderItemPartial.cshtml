@using Common.Models;
@using WebUI.Models;
@model Order

<div class="card">
    <a asp-page="OrderDetail" asp-route-orderId="@Model.Id"></a>
    <div class="card-body">
        <div class="row">
            <tr>
                <td><a asp-page="OrderDetail" asp-route-orderId="@Model.Id" class="color-main">@Model.Id</a></td>
                <td>@Model.CreationDateTime</td>
                <td>@Model.OrderStatus</td>
                <td>@Model.PaymentStatus</td>
                <td>
                    @Model.ShippingAddress.Country<br>
                    @Model.ShippingAddress.AddressLine<br>
                </td>
                <td>
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">@item.ProductName</h6>
                                </div>
                                <span class="text-muted">$@item.ProductPrice</span>
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$@Model.TotalPrice</strong>
                    </li>
                </td>
            </tr>
            <div class="col">
            </div>
        </div>
    </div>
</div>