@using Microsoft.AspNetCore.Http
@using WebUI.Services;
@using WebUI.Users;
@inject IUserProvider _userProvider
@inject IShoppingCartService _shoppingCartService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@{
    var isMyAccountPage = HttpContextAccessor.HttpContext?.Request.Path.StartsWithSegments("/MyAccount") == true;
    var layoutToUse = isMyAccountPage ? "_MyAccountLayout" : "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebUI.styles.css" asp-append-version="true" />
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        var customerIdStr = @Html.Raw(Json.Serialize(HttpContextAccessor.HttpContext?.User.Claims.FirstOrDefault(c => c.Type == "CustomerId")?.Value));
    </script>
    <script src="~/toastr.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WebUI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Product">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Cart">Cart</a>
                        </li>
                    </ul>

                    <div class="position-relative" style="width: 300px;">
                        <form method="get" autocomplete="off" class="d-flex">
                            <input type="text"
                                   id="searchBox"
                                   class="form-control me-2"
                                   name="searchQuery"
                                   placeholder="Search products..."
                                   oninput="fetchSuggestions(this.value)" />
                        </form>
                        <ul id="suggestions" class="list-group position-absolute mt-1"
                            style="z-index: 1000; width: 100%; display: none;"></ul>
                    </div>

                    <form class="form-inline my-2 my-lg-0">
                        @{
                            var nofItemsInCartToDisplay = 0;

                            var customerId = _userProvider.GetCustomerId(Context);
                            var cart = await _shoppingCartService.GetShoppingCart(customerId);

                            var nofItemsInCart = cart?.Items.Count;

                            if (nofItemsInCart != null)
                            {
                                var nofItemsInCartStr = nofItemsInCart.ToString();
                                if (!string.IsNullOrEmpty(nofItemsInCartStr))
                                    nofItemsInCartToDisplay = int.Parse(nofItemsInCartStr);
                            }
                        }
                        <a class="btn btn-success btn-sm ml-3" asp-area="" asp-page="/Cart">
                            <i class="fa fa-shopping-cart"></i> Cart
                            <span class="badge badge-light">@nofItemsInCartToDisplay</span>
                        </a>
                    </form>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row justify-content-center">
            @if (isMyAccountPage)
            {
                <div class="col-md-3">
                    <!-- Vertical Menu Partial View -->
                    @await Html.PartialAsync("_VerticalMenu")
                </div>
            }
            <div class="col-md-@(isMyAccountPage ? 9 : 12)">
                <!-- Main content -->
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        console.log("Layout script loaded");
        async function fetchSuggestions(query) {
            console.log(fetchSuggestions);

            const suggestionsList = document.getElementById('suggestions');
            suggestionsList.innerHTML = '';
            if (!query || query.length < 2) return;

            // Call your backend endpoint (adjust the URL as needed)
            const response = await fetch(`/products/autocomplete?query=${encodeURIComponent(query)}`);
            if (response.ok) {
                console.log(response);
                const products = await response.json();

                suggestionsList.innerHTML = '';
                if (products.length > 0) {
                    products.forEach(product => {
                        const item = document.createElement('li');
                        item.classList.add('list-group-item', 'd-flex', 'align-items-center');
                        item.innerHTML = `
                            <img src="${product.imageFile}" alt="icon" width="32" height="32" class="me-2 rounded" />
                            <span>${product.name}</span>
                        `;
                        item.onclick = () => window.location.href = `/Product/${product.id}`;
                        suggestionsList.appendChild(item);
                    });
                    suggestionsList.style.display = 'block';
                } else {
                    suggestionsList.style.display = 'none';
                }
            }
        }
    </script>

    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - YourAppName - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <button class="chatbot-toggle-button" id="chatbot-toggle-button">
        <i class="fas fa-comment-dots"></i>
    </button>

    <div class="chatbot-pane" id="chatbot-pane">
        <div class="chatbot-header">
            <span>Product Chatbot</span>
            <button class="chatbot-close-btn" id="chatbot-close-btn">&times;</button>
        </div>
        <div class="chatbot-messages" id="chatbot-messages">
        </div>
        <div class="chatbot-input-area">
            <input type="text" id="chatbot-input" placeholder="Ask about products...">
            <button id="chatbot-send-btn">Send</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

    <script>
        $(document).ready(function () {
            const chatbotToggleButton = $('#chatbot-toggle-button');
            const chatbotPane = $('#chatbot-pane');
            const chatbotCloseBtn = $('#chatbot-close-btn');
            const chatbotMessages = $('#chatbot-messages');
            const chatbotInput = $('#chatbot-input');
            const chatbotSendBtn = $('#chatbot-send-btn');

            // --- Chatbot UI Toggle Logic ---
            chatbotToggleButton.on('click', function () {
                chatbotPane.toggle();
            });

            chatbotCloseBtn.on('click', function () {
                chatbotPane.hide();
            });

            // --- Chatbot Messaging Logic ---
            function appendMessage(sender, message) {
                // Sanitize message to prevent XSS if displaying user input without proper encoding
                const sanitizedMessage = $('<div/>').text(message).html();
                const messageDiv = `<div class="chatbot-message ${sender}">${sanitizedMessage}</div>`;
                chatbotMessages.append(messageDiv);
                chatbotMessages.scrollTop(chatbotMessages[0].scrollHeight); // Scroll to bottom
            }

            // Initial bot message
            appendMessage('bot', 'Hello! How can I help you find products today?');

            chatbotSendBtn.on('click', sendMessage);
            chatbotInput.on('keypress', function (e) {
                if (e.which === 13) { // Enter key
                    sendMessage();
                }
            });

            async function sendMessage() {
                const userMessage = chatbotInput.val().trim();
                if (userMessage === '') return;

                appendMessage('user', userMessage);
                chatbotInput.val('');
                chatbotSendBtn.prop('disabled', true).text('Thinking...');

                try {
                    const response = await $.ajax({
                        url: '/components/chatbot?handler=SemanticSearch', // Matches the handler in Chatbot.cshtml.cs
                        method: 'GET', // Or POST if your handler is OnPostSemanticSearchAsync
                        data: { text: userMessage }
                    });

                    if (response && response.length > 0) {
                        let botResponse = 'Here are some products that might be relevant:<br>';
                        response.forEach(product => {
                            // Ensure product properties exist, add basic links or details
                            const productLink = `/ProductDetails?id=${product.id}`; // Adjust this URL to your actual product details page
                            botResponse += `- <strong><a href="${productLink}" target="_blank">${product.name}</a></strong> (Category: ${product.category || 'N/A'})<br>`;
                            botResponse += `  Summary: ${product.summary ? product.summary.substring(0, 100) + '...' : 'No summary'}<br>`;
                        });
                        appendMessage('bot', botResponse);
                    } else {
                        appendMessage('bot', 'I could not find any relevant products for your query. Please try rephrasing.');
                    }
                } catch (error) {
                    console.error("Chatbot API error:", error);
                    appendMessage('bot', 'Oops! Something went wrong. Please try again later.');
                } finally {
                    chatbotSendBtn.prop('disabled', false).text('Send');
                    chatbotInput.focus(); // Keep focus on input after sending
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>