@page
@model WebUI.Pages.OrderDetailModel
@{
    ViewData["Title"] = "OrderDetail";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="Order">Order</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Order.Id</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <form asp-page-handler="UpdateOrder" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="Order.Id" class="form-control" id="id" placeholder="" required>
                    <input type="hidden" asp-for="Order.OrderStatus" class="form-control" id="orderStatus" placeholder="" required>
                    <input type="hidden" asp-for="Order.PaymentStatus" class="form-control" id="paymentStatus" placeholder="" required>
                    <input type="hidden" asp-for="Order.Items" class="form-control" id="items" placeholder="" required>
                    <input type="hidden" asp-for="Order.TotalPrice" class="form-control" id="totalPrice" placeholder="" required>
                    <input type="hidden" asp-for="Order.CreationDateTime" class="form-control" id="creationDateTime" placeholder="" required>
                    <input type="hidden" asp-for="Order.CustomerInfo.CustomerId" class="form-control" id="customerId" placeholder="" required>
                    <input type="hidden" asp-for="Order.CustomerInfo.FirstName" class="form-control" id="firstName" placeholder="" required>
                    <input type="hidden" asp-for="Order.CustomerInfo.LastName" class="form-control" id="lastName" placeholder="" required>
                    <input type="hidden" asp-for="Order.CustomerInfo.Email" class="form-control" id="email">

                    <input type="hidden" asp-for="Order.ShippingAddress.FirstName" class="form-control" id="firstName" placeholder="" required>
                    <input type="hidden" asp-for="Order.ShippingAddress.LastName" class="form-control" id="lastName" placeholder="" required>
                    <input type="hidden" asp-for="Order.ShippingAddress.Email" class="form-control" id="email">
                    <input type="hidden" asp-for="Order.ShippingAddress.Country" class="form-control" id="address" placeholder="1234 Main St" required>
                    <input type="hidden" asp-for="Order.ShippingAddress.State" class="form-control" id="address" placeholder="" required>
                    <input type="hidden" asp-for="Order.ShippingAddress.AddressLine" class="form-control" id="address" placeholder="1234 Main St" required>
                    <input type="hidden" asp-for="Order.ShippingAddress.ZipCode" class="form-control" id="zip" placeholder="" required>

                    <tbody>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Created at</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Shipping</th>
                                    <th scope="col">Items</th>
                                    <th scope="col">TotalPrice</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>@Model.Order.Id</td>
                                <td>@Model.Order.CreationDateTime</td>
                                <td>@Model.Order.OrderStatus</td>
                                <td>@Model.Order.PaymentStatus</td>
                                <td>
                                    @Model.Order.ShippingAddress.Country
                                    <br>
                                    @Model.Order.ShippingAddress.State
                                    <br>
                                    @Model.Order.ShippingAddress.AddressLine
                                    <br>
                                </td>
                                <td>
                                    <ul class="list-group mb-3">
                                        @foreach (var item in Model.Order.Items)
                                        {
                                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                                <div>
                                                    <h6 class="my-0">@item.ProductName</h6>
                                                </div>
                                                <span class="text-muted">$@item.ProductPrice</span>
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total (USD)</span>
                                        <strong>$@Model.Order.TotalPrice</strong>
                                    </li>
                                </td>
                            </tr>
                        </table>
                    </tbody>

                    <h4 class="mb-3">Payment</h4>

                    <div class="d-block my-3">
                        <select asp-for="@Model.Order.PaymentInfo.PaymentMethod" asp-items="Html.GetEnumSelectList<Common.Models.Payment.PaymentMethod>()">
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.PaymentInfo.CardName" for="cc-name">Name on card</label>
                            <input asp-for="Order.PaymentInfo.CardName" type="text" class="form-control" id="cc-name" placeholder="" required>
                            <span asp-validation-for="Order.PaymentInfo.CardName" class="text-danger"></span>
                            <small class="text-muted">Full name as displayed on card</small>
                            <div class="invalid-feedback">
                                Name on card is required
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.PaymentInfo.CardNumber" for="cc-number">Credit card number</label>
                            <input asp-for="Order.PaymentInfo.CardNumber" type="text" class="form-control" id="cc-number" placeholder="" required>
                            <span asp-validation-for="Order.PaymentInfo.CardNumber" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Credit card number is required
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Order.PaymentInfo.Expiration" for="cc-expiration">Expiration</label>
                            <input asp-for="Order.PaymentInfo.Expiration" type="text" class="form-control" id="cc-expiration" placeholder="" required>
                            <span asp-validation-for="Order.PaymentInfo.Expiration" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Expiration date required
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Order.PaymentInfo.CVV" for="cc-expiration">CVV</label>
                            <input asp-for="Order.PaymentInfo.CVV" type="text" class="form-control" id="cc-cvv" placeholder="" required>
                            <span asp-validation-for="Order.PaymentInfo.CVV" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Security code required
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Update order</button>
                </form>
            </div>
        </div>
    </div>
</div>